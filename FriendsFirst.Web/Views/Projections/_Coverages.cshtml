@model IEnumerable<FriendsFirst.Entities.Person>

<div>
    @foreach (var person in Model)
    {
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">@Html.Label("Name") </div>
            <div class="col-md-6">@person.Name</div>
        </div>

        <div class="row">
            <div class="col-md-6">@Html.Label("DOB") </div>
            <div class="col-md-6">@person.DOB.ToShortDateString()</div>
        </div>

        <div class="row">
            <div class="col-md-6">@Html.Label("Gender") </div>
            <div class="col-md-6">@person.Gender.ToString()</div>
        </div>

        <div class="row">
            <div class="col-md-6">@Html.Label("Retirement Date")</div>
            <div class="col-md-6">@person.NormalRetirementDate.ToShortDateString()</div>
        </div>
    </div>
    }
</div>